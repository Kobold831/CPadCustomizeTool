<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:allowDividerAbove="false">

        <Preference
            android:key="pre_other_start_settings"
            android:title="@string/pre_other_title_settings" />

        <Preference
            android:key="pre_other_start_dev_settings"
            android:title="@string/pre_other_title_development" />

        <Preference
            android:key="pre_other_start_ui_adjustment"
            android:title="@string/pre_other_title_adjustment" />

        <Preference
            android:key="pre_other_screen_off_time"
            android:title="@string/pre_other_title_screen_off_time" />

        <Preference
            android:key="pre_other_web_view"
            android:title="WebViewを起動"
            android:summary="セキュリティのため非SSL接続及びJavaScriptを使用したファイルのアクセス機能は使用できません" />

        <Preference
            android:key="pre_other_launch_app"
            android:title="アプリランチャー" />
    </PreferenceCategory>
</PreferenceScreen>