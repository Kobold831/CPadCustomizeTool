<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="WelcomeTheme" parent="@style/WelcomeScreenTheme" />

    <style name="NoActionBarTheme" parent="@style/Theme.Material3.Dark.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Theme.Material3.Dark">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="preferenceTheme">@style/ThemeOverlay.App.Preference</item>
    </style>

    <style name="DialogNoActionBarTheme" parent="@style/Theme.Material3.Dark.Dialog">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.App.Preference" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/PreferenceMaterialSwitch</item>
    </style>

    <style name="PreferenceMaterialSwitch" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <!-- <item name="widgetLayout">@layout/widget_material_switch</item> -->
    </style>
</resources>
